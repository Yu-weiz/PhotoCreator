            <CheckBox x:Name="chkIsEraser" Click="chkIsEraser_Click" Content="{Binding LocalizedResource.tOriginal, Source={StaticResource LocalizedStrings}}" BorderBrush="#FF662804" Foreground="#FF662804"  Background="#FF8D3400" Width="480" Canvas.Top="-6"/>
        	<Coding4Fun_Phone_Controls:RoundButton x:Name="rbtColor" Content="画刷" Click="rbtColor_Click" VerticalAlignment="Top" ImageSource="/Assets/AppBar/ColorBoard.png" HorizontalAlignment="Right" Height="54" BorderBrush="{x:Null}" Foreground="White" Background="#FF662804" Canvas.Left="398" Canvas.Top="4"/>
        	<Path Data="M2.5,283 L474.75,283" Fill="Black" HorizontalAlignment="Left" Height="1" Stretch="Fill" Stroke="#FF7A0A0A" UseLayoutRounding="False" Width="473.25" Canvas.Left="2.5" VerticalAlignment="Top" Margin="0,-19,0,0" Canvas.Top="87"/>

