        </Grid>
        <Grid x:Name="grOpacity"  Height="70" Background="#F2FFFFFF">            <TextBlock HorizontalAlignment="Left" Margin="10,17,0,0" TextWrapping="Wrap" Text="{Binding LocalizedResource.PSPOpacity, Source={StaticResource LocalizedStrings}}" VerticalAlignment="Top" Foreground="#FF662804"/>
