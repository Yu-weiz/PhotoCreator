            <Slider x:Name="slSize" ValueChanged="slSize_ValueChanged" HorizontalAlignment="Left" Height="94" Margin="86,0,0,-24" VerticalAlignment="Top" Width="374" BorderBrush="{x:Null}" Minimum="20" Maximum="200" SmallChange="2" LargeChange="10" Value="50" Background="#FFFFC4A8" Foreground="#FF662804"/>
        </Grid>
        <Grid x:Name="grTransparency"  Height="70" Background="#F2FFFFFF">            <TextBlock HorizontalAlignment="Left" Margin="10,17,0,0" TextWrapping="Wrap" Text="{Binding LocalizedResource.PSPTransparency, Source={StaticResource LocalizedStrings}}" VerticalAlignment="Top" Foreground="#FF662804"/>
