<ResourceDictionary
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
 xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
xmlns:YuweizControl="clr-namespace:Yuweiz.Phone.Ad.Controls"
    >

    <Style TargetType="YuweizControl:AdCustomBar">       
        <Setter Property="Width" Value="480"/>
        <Setter Property="Height" Value="80"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="YuweizControl:AdCustomBar">
                    <Grid x:Name="LayoutRoot">
                        <TextBlock x:Name="TextBlockWords" TextWrapping="Wrap" Text="TextBlock" TextAlignment="Center" FontSize="26.667" Visibility="Collapsed"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>